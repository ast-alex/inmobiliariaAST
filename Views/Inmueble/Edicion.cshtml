@model inmobiliariaAST.Models.Inmueble

@{
    ViewData["Title"] = "Editar Inmueble";
}

<div class="container mt-4">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <hr />

    <form asp-action="Edicion" method="post" class="form-container">
        <div class="form-group">
            <label asp-for="Direccion" class="control-label"></label>
            <input asp-for="Direccion" class="form-control" placeholder="Ingrese dirección" />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Uso" class="control-label"></label>
            <select asp-for="Uso" class="form-control">
                <option value="">Seleccione Uso</option>
                <option value="Comercial">Comercial</option>
                <option value="Residencial">Residencial</option>
            </select>
            <span asp-validation-for="Uso" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Tipo" class="control-label"></label>
            <select asp-for="Tipo" class="form-control">
                <option value="">Seleccione Tipo</option>
                <option value="Casa">Casa</option>
                <option value="Departamento">Departamento</option>
                <option value="Local">Local</option>
                <option value="Deposito">Depósito</option>
                <option value="Otro">Otros..</option>
            </select>
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ID_propietario" class="control-label">Propietario</label>
            <select asp-for="ID_propietario" class="form-control" asp-items="ViewBag.Propietarios">
                <option value="">Seleccione Propietario</option>
            </select>
            <span asp-validation-for="ID_propietario" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Cantidad_Ambientes" class="control-label"></label>
            <input asp-for="Cantidad_Ambientes" class="form-control" placeholder="Ingrese cantidad de ambientes" />
            <span asp-validation-for="Cantidad_Ambientes" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Latitud" class="control-label"></label>
            <input asp-for="Latitud" class="form-control" type="number" step="0.000001" placeholder="Ingrese latitud" />
            <span asp-validation-for="Latitud" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Longitud" class="control-label"></label>
            <input asp-for="Longitud" class="form-control" type="number" step="0.000001" placeholder="Ingrese longitud" />
            <span asp-validation-for="Longitud" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Precio" class="control-label"></label>
            <input asp-for="Precio" class="form-control" type="number" step="0.01" placeholder="Ingrese precio" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Estado" class="control-label"></label>
            <select asp-for="Estado" class="form-control">
                <option value="">Seleccione Estado</option>
                <option value="true">Disponible</option>
                <option value="false">No Disponible</option>
            </select>
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="ID_inmueble" />

        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary btn-lg">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
