@model inmobiliariaAST.Models.Inmueble

@{
    ViewBag.Title = "Detalles del Inmueble";
}

<div class="text-center">
    <h1 class="display-4">Detalles del Inmueble</h1>
</div>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h5>Direcci√≥n: @Model.Direccion</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Latitud:</label>
                        <p class="form-control-plaintext">@Model.Latitud</p>
                    </div>
                    <div class="form-group">
                        <label>Longitud:</label>
                        <p class="form-control-plaintext">@Model.Longitud</p>
                    </div>
                    <div class="form-group">
                        <label>Uso:</label>
                        <p class="form-control-plaintext">@Model.Uso</p>
                    </div>
                    <div class="form-group">
                        <label>Tipo:</label>
                        <p class="form-control-plaintext">@Model.Tipo</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Cantidad de Ambientes:</label>
                        <p class="form-control-plaintext">@Model.Cantidad_Ambientes</p>
                    </div>
                    <div class="form-group">
                        <label>Precio:</label>
                        <p class="form-control-plaintext">@Model.Precio</p>
                    </div>
                    <div class="form-group">
                        <label>Estado:</label>
                        <p class="form-control-plaintext">@Model.Estado</p>
                    </div>
                    <div class="form-group">
                        <label>Disponibilidad:</label>
                        <p class="form-control-plaintext">@(@Model.Disponibilidad ? "Disponible" : "No Disponible")</p>
                    </div>
                    <div class="form-group">
                        <label>Propietario:</label>
                        <p class="form-control-plaintext">@Model.Propietario?.Nombre @Model.Propietario?.Apellido</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <a href="@Url.Action("Index")" class="btn btn-primary">Volver a la lista</a>
            <a href="@Url.Action("Edicion", new { id = Model.ID_inmueble })" class="btn btn-warning">Editar</a>
        </div>
    </div>
</div>
