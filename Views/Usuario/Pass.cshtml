@model PasswordViewModel

<div class="container mt-5">
    <h2 class="text-center mb-4">Cambiar Contraseña</h2>

    <form asp-action="Pass" method="post" class="bg-light p-4 rounded shadow">
        <div class="form-group mb-3">
            <label for="PasswordActual" class="form-label">Contraseña Actual</label>
            <input asp-for="PasswordActual" class="form-control" type="password" placeholder="Introduce tu contraseña actual" required />
            <span asp-validation-for="PasswordActual" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="NuevaPassword" class="form-label">Nueva Contraseña</label>
            <input asp-for="NuevaPassword" class="form-control" type="password" placeholder="Introduce una nueva contraseña" required />
            <span asp-validation-for="NuevaPassword" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label for="ConfirmarPassword" class="form-label">Confirmar Nueva Contraseña</label>
            <input asp-for="ConfirmarPassword" class="form-control" type="password" placeholder="Confirma tu nueva contraseña" required />
            <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Cambiar Contraseña</button>
    </form>
</div>
